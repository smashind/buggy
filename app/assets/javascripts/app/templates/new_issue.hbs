<form id="new_issue" action="/issues" method="post" class="form-horizontal">
  <fieldset>
    <legend>New Issue</legend>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Issue Name</label>
      <div class="col-sm-8">
        <input type="text" name="name" id="name" placeholder="Issue Name" class="form-control" value="{{name}}" />  
      </div>
    </div>

    <div class="form-group">
      <label for="description" class="col-sm-2 control-label">Description</label>
      <div class="col-sm-8">
        <textarea id="description" name="description" rows="5" placeholder="Description" class="form-control">{{description}}</textarea>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <button type="submit" class="btn btn-success">Submit</button>
      </div>
    </div>
  </fieldset>
</form>